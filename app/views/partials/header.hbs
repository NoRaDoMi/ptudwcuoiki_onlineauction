<!-- HEADER -->
<header>
    

    <!-- header -->
    <div id="header">
        <div class="container">
            <div class="pull-left">
                <!-- Logo -->
                <div class="header-logo">
                    <a class="logo" href="/">
                        <img src="/img/logo.png" alt="">
                    </a>
                </div>
                <!-- /Logo -->

                <!-- Search -->
                <div class="header-search">
                    <form action="/product/search" method="get">
                        <input class="input search-input" name="q" type="text" placeholder="Enter your keyword"
                            value={{query}}>
                        <select class="input search-categories" name="selcat">
                            <option value="0">All Categories</option>

                            {{#each Cat}}
                            <option value={{id}}>{{cat_name}}</option>
                            {{/each}}
                        </select>
                        <button class="search-btn" type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>
                <!-- /Search -->
            </div>
            <div class="pull-right">

                <!-- Account -->
                {{#each user}}
                {{#if isloggedin}}

                <ul class="header-btns">

                    <li class="header-account dropdown default-dropdown">
                        <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">

                            <div class="header-btns-icon">
                                <i class="fa fa-user-o"></i>
                            </div>
                            <strong class="text-uppercase">Welcome, <i class="fa fa-caret-down"></i></strong>
                            <div>
                                <span>{{userInfo.firstname}}</span>
                            </div>

                        </div>

                        <ul class="custom-menu">
                            <li><a href="/account"><i class="fa fa-user-o"></i> My Account</a></li>
                            <li><a href="/account/watchlist"><i class="fa fa-heart-o"></i> My Watchlist</a></li>
                            <li><a href="/account/mybid"><i class="fas fa-gavel"></i> My Bids</a></li>
                            <li><a href="/account/mywinningproduct"><i class="fas fa-gavel"></i> My Winning</a></li>
                            <li><a href="#"><i class="fa fa-unlock-alt"></i> Upgrade Accounts</a></li>
                            <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                        </ul>
                    </li>

                    {{else}}
                    <li class="mt-4" style="list-style-type: none;">
                        <div>
                            <a href="/auth/register" class="btn btn-outline-secondary border">Signup</a>

                            <a href="/auth/login" class="btn btn-info">Login</a>
                        </div>
                    </li>
                    {{/if}}
                    {{/each}}

