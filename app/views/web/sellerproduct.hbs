			<form class="form-horizontal form-label-left" action="/seller/add" role="form" method="POST"
				enctype="multipart/form-data" novalidate>
				<div class="media" style="margin-left: 50px; margin-bottom: 20px;">
					<div class="media-left panel">
						<a href="#">
							<img class="media-object" style="border-radius: 25px;" src="/img/backgroung_register.jpg"
								alt="..." width="300px" height="350px">
						</a>
					</div>
					<div class="media-body">
						{{!-- <h4 class="media-heading">Informations</h4> --}}
						{{!-- Tên sản phẩm --}}
						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-2 label-align" for="email">Product name <span
									class="required">*</span>
							</label>
							<div class="col-md-7 col-sm-6">
								<input type="text" name="productname" required="required" class="form-control">
							</div>
						</div>


						{{!-- Loại sản phẩm --}}
						<div class=" item form-group">
							<label class="col-form-label col-md-3 col-sm-2 label-align" for="website">Type product <span
									class="required">*</span>
							</label>
							<div class="col-md-7 col-sm-6">
								<select class="input search-categories" name="selcat" id="product_type">
									{{#each ProT}}
									<option value={{id}}>{{protype_name}}</option>
									{{/each}}
								</select>
							</div>
						</div>

						{{!-- Giá khởi điểm --}}
						<div class=" item form-group">
							<label class="col-form-label col-md-3 col-sm-2 label-align" for="number"> Giá khởi điểm
								<span class="required">*</span>
							</label>
							<div class="col-md-7 col-sm-6">
								<input type="number" id="number" required="required"
									data-validate-minmax="5000,100000000000000" class="form-control"
									name="product_price">
							</div>
						</div>

						{{!-- Giá mua ngay --}}
						<div class=" item form-group">
							<label class="col-form-label col-md-3 col-sm-2 label-align" for="number"> Giá mua ngay <span
									class="required">*</span>
							</label>
							<div class="col-md-7 col-sm-6">
								<input type="number" required="required" data-validate-minmax="5000,100000000000000"
									class="form-control" name="product_buynowprice">
							</div>
						</div>

						{{!-- Bước giá --}}
						<div class=" item form-group">
							<label class="col-form-label col-md-3 col-sm-2 label-align" for="number"> Bước giá <span
									class="required">*</span>
							</label>
							<div class="col-md-7 col-sm-6">
								<input type="number" id="number" required="required"
									data-validate-minmax="1000,10000000000000" class="form-control"
									name="product_stepcost">
							</div>
						</div>

						{{!-- Ngày hết hạn --}}
						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-2 label-align" for="telephone">Expiry Date
								<span class="required">*</span>
							</label>
							<div class="col-md-7 col-sm-6">
								<div class='input-group date' id='datetimepicker'>
									<input id="input_expdate" type='text' class="form-control" name="expdate"
										required="required" />

									<span class="input-group-addon">
										<span class="glyphicon glyphicon-calendar"></span>
									</span>
								</div>
							</div>
						</div>
					</div>
				</div>


				{{!-- Upload hình --}}
				<div class="item form-group">
					<label class="col-form-label col-md-2 col-sm-2 label-align" for="telephone">Upload images <span
							class="required">*</span>
					</label>

					<div class="col-md-8 col-sm-8">
						<label class="control-label small" for="file_img">ẢNH CHÍNH (jpg):</label>
						<input id="input-drop1" type="file" class="file" data-preview-file-type="text" name="main_img">

					</div>
				</div>


				<div class="item form-group">
					<label class="col-form-label col-md-2 col-sm-3 label-align" for="telephone"> <span
							class="required">*</span>
					</label>
					<div class="col-md-8 col-sm-8">
						<label class="control-label small" for="file_img">CÁC ẢNH PHỤ:</label>
						<input id="input-drop2" type="file" class="file" data-preview-file-type="text" name="alt_imgs"
							multiple>

					</div>
				</div>


				{{!-- Mô tả --}}
				<div class="item form-group">
